<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.user.home.orders.OrderStateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ostah"
            android:textStyle="bold"
            android:textColor="@color/base"
            android:textSize="24sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        android:background="@color/base">
        <ImageView
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_whit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:text="@string/order_state"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/state_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_margin="30dp"
               android:background="@drawable/previous_order_item_bg">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="15dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:id="@+id/order_recieved_indecator"
                               android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:src="@color/white"
                               app:civ_border_color="@color/base"
                               app:civ_border_width="2dp"/>
                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_width="4dp"
                               android:layout_height="30dp"
                               android:background="@color/base"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:gravity="center"
                               android:layout_marginStart="20dp"
                               android:layout_marginEnd="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:text="تم إستلام طلبك"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:layout_width="30dp"
                               android:id="@+id/order_aproved_indecator"
                               android:layout_height="30dp"
                               android:src="@color/white"
                               app:civ_border_color="@color/base"
                               app:civ_border_width="2dp"/>
                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_width="4dp"
                               android:layout_height="30dp"
                               android:background="@color/base"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:gravity="center"
                               android:layout_marginStart="20dp"
                               android:layout_marginEnd="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:text="تم تأكيد طلبك"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:layout_width="30dp"
                               android:id="@+id/order_inprogres_indecator"
                               android:layout_height="30dp"
                               android:src="@color/white"
                               app:civ_border_color="@color/base"
                               app:civ_border_width="2dp"/>
                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_width="4dp"
                               android:layout_height="30dp"
                               android:background="@color/base"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:gravity="center"
                               android:layout_marginStart="20dp"
                               android:layout_marginEnd="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:text="طلبك قيد المعالجة"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:layout_width="30dp"
                               android:id="@+id/order_done_indecator"
                               android:layout_height="30dp"
                               android:src="@color/white"
                               app:civ_border_color="@color/base"
                               app:civ_border_width="2dp"/>
                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_width="4dp"
                               android:layout_height="30dp"
                               android:background="@color/base"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:gravity="center"
                               android:layout_marginStart="20dp"
                               android:layout_marginEnd="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:text="تم تنفيذ طلبك"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:layout_width="30dp"
                               android:id="@+id/order_deleted_indecator"
                               android:layout_height="30dp"
                               android:src="@color/white"
                               app:civ_border_color="@color/base"
                               app:civ_border_width="2dp"/>
                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_width="4dp"
                               android:layout_height="30dp"
                               android:background="@color/base"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:gravity="center"
                               android:layout_marginStart="20dp"
                               android:layout_marginEnd="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:text="تم إلغاء طلبك"/>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">
                   <LinearLayout
                       android:id="@+id/cancel_btn"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:background="@drawable/gray_rounded_bg"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:layout_margin="10dp"
                           android:text="إلغاء الطلب"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:src="@drawable/ic_close"
                           android:layout_marginStart="10dp"
                           android:layout_marginEnd="10dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:background="@drawable/base_rounded_bg"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:layout_margin="10dp"
                           android:textColor="@color/white"
                           android:text="تم تنفيذ الطلب"/>

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:src="@drawable/ic_done"
                           android:layout_marginStart="10dp"
                           android:layout_marginEnd="10dp"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/progress_layout"
        android:id="@+id/progrss_lay"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>
</LinearLayout>